<!-- SHOW PAGE FOR A SINGLE DREAM POST -->


<center>
    <h1> Dream Space </h1>
</center>
<br>


<h3 class="pink-text accent-2"><%= @dream_post.user.name %>'s Dream Post</h3>
    <p><%= @dream_post.content %></p>


            <!--if I am the user that owns this entry, show edit and delete links -->
            
<!-- Edit Link -->
    <% if authorized_to_edit?(@dream_post) %>
        <h5><a href="/dream_posts/<%=@dream_post.id%>/edit" class="btn btn-info pink lighten-1">Edit</a></h5>
        <br>

<!-- Delete Link -->
        <form class="" action="/dream_posts/<%= @dream_post.id %>"
        method="post">
            <input type="hidden" name="_method" value="DELETE" >
            <input type="submit" name="" value="Delete" class="btn btn-info pink lighten-1">
        </form>

    <% end %>
